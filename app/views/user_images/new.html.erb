<%= provide(:head_title, "Upload Picture") %>
<h1 class="text-center up-picture">投稿する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user_image) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Picture Name" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :picture, "Picuture Upload" %>
      <%= f.file_field :picture, accept: 'image/jpeg, image/png' %>

      <%= f.submit "Upload Picuture!", class: "btn btn-primary"%>

    <% end %>
  </div>
</div>
